# Application Settings
APP_PORT=8000
APP_HOST=0.0.0.0
DEBUG=false

# Database Settings
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=expense_tracker
DB_USERNAME=root
DB_PASSWORD=123456

# MySQL Root Password (usado pelo container MySQL)
MYSQL_ROOT_PASSWORD=your_password

# JWT Settings
# CRÍTICO: Gere chaves fortes!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256

# Admin Token (para endpoints /health, /config, /docs)
# python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_TOKEN=your_admin_token

# CORS Settings (domínios permitidos - SEM http:// ou https://)
# Exemplo: yourdomain.com,www.yourdomain.com,app.yourdomain.com
ALLOWED_ORIGINS=yourdomain.com

# Logging debug or info
LOG_LEVEL=info
